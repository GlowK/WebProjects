<% include partials/header %>

<h1> Index page</h1>
<% blogs.forEach( (blog) =>{ %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%=blog.image%>">
        <span><%=blog.created%></span>
        <P><%=blog.body.substring(0,100)%>...</P>
        <a href="/blogs/<%=blog.id%>">Read more</a>
    </div>
<% }); %>
<% include partials/footer %>